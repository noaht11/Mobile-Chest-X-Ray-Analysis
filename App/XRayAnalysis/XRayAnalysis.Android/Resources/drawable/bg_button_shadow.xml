<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Layers to create the shadow effects -->
    <item>
        <shape>
            <padding android:top="@dimen/two_buttons_button_shadow_padding_vertical" android:right="@dimen/two_buttons_button_shadow_padding_horizontal" 
                     android:bottom="@dimen/two_buttons_button_shadow_padding_vertical" android:left="@dimen/two_buttons_button_shadow_padding_horizontal" />
            <solid android:color="#00CCCCCC" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="@dimen/two_buttons_button_shadow_padding_vertical" android:right="@dimen/two_buttons_button_shadow_padding_horizontal" 
                     android:bottom="@dimen/two_buttons_button_shadow_padding_vertical" android:left="@dimen/two_buttons_button_shadow_padding_horizontal" />
            <solid android:color="#10CCCCCC" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="@dimen/two_buttons_button_shadow_padding_vertical" android:right="@dimen/two_buttons_button_shadow_padding_horizontal" 
                     android:bottom="@dimen/two_buttons_button_shadow_padding_vertical" android:left="@dimen/two_buttons_button_shadow_padding_horizontal" />
            <solid android:color="#20CCCCCC" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="@dimen/two_buttons_button_shadow_padding_vertical" android:right="@dimen/two_buttons_button_shadow_padding_horizontal" 
                     android:bottom="@dimen/two_buttons_button_shadow_padding_vertical" android:left="@dimen/two_buttons_button_shadow_padding_horizontal" />
            <solid android:color="#30CCCCCC" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="@dimen/two_buttons_button_shadow_padding_vertical" android:right="@dimen/two_buttons_button_shadow_padding_horizontal" 
                     android:bottom="@dimen/two_buttons_button_shadow_padding_vertical" android:left="@dimen/two_buttons_button_shadow_padding_horizontal" />
            <solid android:color="#50CCCCCC" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/two_buttons_button_shadow_radius" />
        </shape>
    </item>
    
</layer-list>